---
import Layout from '../layouts/Layout.astro';
import Screen from '../components/Screen.astro';
import Slider from '../components/Slider.astro';
import Header from '../components/Header.astro';
import Information from '../components/Information.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import Main from '../components/Main.astro';
---
<Layout pageTitle="Home">
    
    <Header/>

    <Main />
    
    <Slider/>

    <Information/>

    <Contact/>
    
    <Footer/>

    <a href="#begining" class="to-top">
        <span class="top-container">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><path d="M214.6 41.4c-12.5-12.5-32.8-12.5-45.3 0l-160 160c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L160 141.2V448c0 17.7 14.3 32 32 32s32-14.3 32-32V141.2L329.4 246.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3l-160-160z"/></svg>
        </span>
    </a>

    <Screen/>
    
</Layout>

<script>
    const dot = document.querySelector(".to-top");
    
    window.addEventListener("scroll", () => {
        if(window.pageYOffset > 100)
            dot.classList.add("active");
        else
            dot.classList.remove("active")
    })

</script>

<style>
.to-top{
    background-color: #2ba84a;
    box-shadow: 0 0px 4px black;
    border-radius: 10px;
    position: fixed;
    padding: 0.8rem;
    width: 50px;
    height: 50px;
    bottom: 1rem;
    right: 1rem;
    z-index: 1;
    opacity: 0;
    pointer-events: none;
    transition: all .4s;
}

.to-top.active{
    bottom: 1.5rem;
    pointer-events: auto;
    opacity: 1;
}

svg{
    fill: #fff;
    transform: translateY(-0.3rem)
}
</style>
