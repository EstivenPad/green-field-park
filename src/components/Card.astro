---
interface Props {
    cardBackground?: string,
    cardContent?: string,
    cardNumber?: number
};

const { cardBackground } = Astro.props as Props;
const { cardNumber } = Astro.props as Props;
const { cardContent = "QLorem ipsum dolor, sit amet consectetur adipisicing elit. Obcaecati sed atque veniam repellat pariatur eligendi placeat, inventore earum. Exercitationem odit magnam, quod veniam iste impedit" } = Astro.props as Props;
---

<div class={`card swiper-slide ${cardBackground}`}>
    <h2 class="card_number">{cardNumber}</h2>
    <p class="card_content">{cardContent}</p>
</div>

<style> 
.card {
    background-size: cover;
    background-position: center;
    border-radius: 8px;
    width: 18em;
    height: 18em;
    padding: 0 30px 10px 30px;
    position: relative;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    text-align: center;
    color: #fff;
}

.card_number {
    font-size: 80px;
    position: absolute;
    top: 0;
    margin-bottom: 30px;
}

.card-background-1{
    background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.5)), url('../images/slider-1.jpg');
}

.card-background-2{
    background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.5)), url('../images/slider-2.jpg');
}

.card-background-3{
    background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.5)), url('../images/slider-3.jpg');
}
</style>